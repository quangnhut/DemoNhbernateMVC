@model QuanLyHocSinh.Domain.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Student?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <span style="padding-right:20px">Họ:</span> <span>@Html.DisplayFor(model => model.FirstName)</span>
        </dt>

        <dt>
            <span style="padding-right:20px">Tên:</span> <span>@Html.DisplayFor(model => model.LastName)</span>
        </dt>

        <dt>
            <span style="padding-right:20px">Mã nhân viên:</span> <span>@Html.DisplayFor(model => model.Code)</span>
        </dt>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-primary"/> |
            @Html.ActionLink("Về trang chủ", "Index")
        </div>
    }
</div>
